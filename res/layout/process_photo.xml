<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4f5154"
    android:orientation="vertical" >
   
    <it.sephiroth.android.library.imagezoom.ImageViewTouch
        android:id="@+id/process_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bw_layout"
        android:scaleType="fitCenter" 
        />
    <RelativeLayout
         android:id="@+id/bw_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/test_layout"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
         android:background="#626569">
         
       <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
            
             android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/bw1"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grayscal5"/>
        <ImageView
            android:id="@+id/bw2"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:src="@drawable/grayscal4"/>
        <ImageView
            android:id="@+id/bw3"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="18dp"
            android:src="@drawable/grayscal3"/>
        <ImageView
            android:id="@+id/bw4"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="18dp"
            android:src="@drawable/grayscal2"/>
        <ImageView
            android:id="@+id/bw5"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="18dp"
            android:src="@drawable/grayscal1"/>
       </LinearLayout>
    </RelativeLayout>
    
     <RelativeLayout
         android:id="@+id/test_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:layout_alignParentBottom="true"
        android:background="#3b84ce">
       <LinearLayout 
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#77b9fc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >
            
        </LinearLayout>
        <ImageView 
            android:id="@+id/process_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
           
            android:src="@drawable/color_selector"/>
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#77b9fc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >
            
        </LinearLayout>
        <ImageView 
            android:id="@+id/process_bw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_gravity="center_vertical"
            android:src="@drawable/bw2"            
            />
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#77b9fc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >
            
        </LinearLayout>
        <ImageView 
            android:id="@+id/process_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_gravity="center_vertical"
            android:src="@drawable/gray_selector"      
            />
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#77b9fc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >
            
        </LinearLayout>
        </LinearLayout>
        <ImageView 
            android:id="@+id/process_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
            android:src="@drawable/save_selector2"      
            />
        
        
   </RelativeLayout>
  

</RelativeLayout>
