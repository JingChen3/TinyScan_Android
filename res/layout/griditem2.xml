<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
    >
    
   <RelativeLayout 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" 
      android:layout_marginTop="5dp"
      android:layout_centerInParent="true">
    <ImageView 
        android:id="@+id/listphoto_photo"
        android:layout_width="88dp"
        android:layout_height="124dp" 
        android:background="@drawable/list_photo_bg"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        
       />
   
    <TextView 
        android:id="@+id/listphoto_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listphoto_photo"
        android:textColor="#000000"
        android:paddingBottom="4dp"
       android:paddingRight="8dp"
         />
    
     <ImageView 
        android:id="@+id/listphoto_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:src="@drawable/delete3"/>
    </RelativeLayout>
</RelativeLayout>
